<div class='row'>
    <% if (output.canUpload) { %>
        <div class='col-md-12'>
            <h2 class='pull-right'>
                <a href='/ctf/upload-document' class='btn btn-primary'><i class="fa fa-upload"></i> Upload Documents</a>
            </h2>
        </div>
    <% } %>
    <div class='col-md-12'>
    <% include ../../common/infoBoxes %>

    <form id="addEditProduct" name="addEditProduct" action="/ctf/edit-document" method="post">
        <fieldset>

            <input type="hidden" name="id" value="<%= output.product.id %>" id="addEditProduct_product_id" />

            <div class="form-group ">
                <label class="  control-label" for="addEditProduct_product_name">Document Title</label>
                <div class="  controls">

                    <input type="text" name="name" value="<%= output.product.name %>" id="addEditProduct_product_name" class="form-control" placeholder="Enter product name" />
                </div>
            </div>

            <div class="form-group ">
                <label class="  control-label" for="addEditProduct_product_code">Ref. nยบ </label>
                <div class="  controls">

                    <input type="text" name="code" value="<%= output.product.code %>" id="addEditProduct_product_code" class="form-control" placeholder="Enter product code" />
                </div>
            </div>

            <div class="form-group ">
                <label class="  control-label" for="addEditProduct_product_tags">Tags </label>
                <div class="  controls">

                    <input type="text" name="tags" value="<%= output.product.tags %>" id="addEditProduct_product_tags" class="form-control" placeholder="Enter product tags eg. Tag1,Tag2,Tag3" />
                </div>
            </div>
            
            <div class="form-group ">
                <label class="  control-label" for="addEditProduct_product_description">Content </label>
                <div class="  controls">
                    <textarea name="description" cols="" rows="10" id="addEditProduct_product_description" class="form-control"><%= output.product.description %></textarea>
                </div>
            </div>

            <input type="submit" value="Submit" id="addEditProduct_0" class="btn btn-primary" />

        </fieldset>
    </form>

    <script type="text/javascript">
        if (typeof jQuery != 'undefined') {
            if (typeof jQuery.fn.tooltip == 'function') {
                jQuery('i.s2b_tooltip').tooltip();
            }
        }
    </script>

    </div></div>
